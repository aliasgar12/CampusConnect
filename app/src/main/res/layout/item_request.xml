<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:id="@+id/cont_root_request"
    android:maxWidth="50dp"
    android:clickable="true">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:id="@+id/item_request_userName"
        android:maxLines="1"
        android:textSize="30sp"/>
    <TextView
        android:layout_below="@+id/item_request_userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subject Name ="
        android:paddingStart="16dp"
        android:paddingTop="5dp"
        android:id="@+id/item_request_subjectName"
        android:maxLines="1"
        android:textSize="22sp"/>

    <TextView
        android:layout_below="@+id/item_request_subjectName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Module Name ="
        android:paddingStart="16dp"
        android:paddingTop="5dp"
        android:id="@+id/item_request_moduleName"
        android:maxLines="1"
        android:textSize="18dp"/>

</RelativeLayout>